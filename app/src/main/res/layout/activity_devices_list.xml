    tools:context="mk.ukim.finki.mpip.lanmsn.activities.DevicesListActivity">

    <TextView
        android:id="@+id/txtMyDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <ListView
        android:id="@+id/peersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <Button
